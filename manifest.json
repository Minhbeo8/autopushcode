{
  "manifest_version": 3,
  "name": "VSPhone Auto Redeemer",
  "version": "2.0 (Emoji Icon)",
  "description": "Tự động nhập và gia hạn/quy đổi mã cho VSPhone.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "*://cloud.vsphone.net/*"
  ]
}
